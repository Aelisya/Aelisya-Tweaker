{
    "manifest_version": 2,
    
    "name": "__MSG_appName__",
    "version": "3.2",
    "description": "__MSG_appDesc__",
    "icons": {
        "48": "icons/icon48.png",
        "128": "icons/icon128.png",
        "256": "icons/icon256.png"
    },
    "homepage_url": "https://github.com/aelisya/Vivaldi-Aelisya-Tweaker",
    "default_locale": "en",
    
    "content_security_policy": "default-src 'self'",

    "permissions": [
        "https://*/*",
        "declarativeNetRequest"
    ],

    "declarative_net_request": {
        "rule_resources": [{
          "id": "ruleset_1",
          "enabled": true,
          "path": "rules.json"
        }]
    },
    
    "browser_action": {
        "default_icon": {
            "48": "icons/icon48.png"
        },
        "default_popup": "pages/popup.html"
    },
    
    "content_scripts": [{
            "css": ["css/pageMod.css"],
            "js": ["js/background.js"],
            "matches": ["https://*/*","http://*/*"],
            "all_frame": true,
            "run_at": "document_idle"
        }
    ]
}